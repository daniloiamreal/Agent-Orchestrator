{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.SemanticKernel": "Information"
    }
  },
  "AllowedHosts": "*",
  "UseMockLLM": false,
  "AI": {
    "Provider": "Perplexity",
    "ApiKey": "chavesecretaapiKeyperplexity",
    "Model": "sonar",
    "Endpoint": "https://api.perplexity.ai/chat/completions"
  },
  "Memory": {
    "Provider": "InMemory"
  },
  "Agents": {
    "MaxRetries": 3,
    "TimeoutSeconds": 120,
    "EnableHumanInTheLoop": true,
    "SafetyLimits": {
      "MaxTokensPerRequest": 4000,
      "MaxConcurrentAgents": 5,
      "MaxPlanSteps": 20
    }
  }
}